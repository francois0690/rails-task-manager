<!-- app/views/tasks/index.html.erb -->
<div class="container">

<h1>Mes taches</h1>
<div class="ul">
<ul>
  <% @tasks.each do |task| %>
    <li>
      <div>
        <% if task.completed %>
          <i class="fas fa-check-square"></i>
        <% else  %>
          <i class="far fa-square"></i>
        <% end %>

        <%= link_to task.title, task_path(task.id)  %>

        <%= link_to task_path(task),
            method: :delete,
            data: { confirm: "Voulez-vous supprimer cette tache ?" } do %>
            <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </li>
  <% end %>
</ul>
</div>

<div class="add">
  <i class="fas fa-plus"></i>
  <%= link_to " Ajouter une nouvelle tache", new_task_path %>

</div>
</div>
